@model IEnumerable<ReviewAggregatorWebApp.Model.Director>

@{
    Layout = "~/Views/Shared/MovieListsLayout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<h1>Список режиссеров</h1>

<ul>
    @foreach (var director in Model)
    {
        <li>
            <a href="@Url.Action("Filter", "MoviesList", new { filterType = "director", filterValue = director.Name })">
                @director.Name
            </a>
        </li>
    }
</ul>