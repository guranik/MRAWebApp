@model IEnumerable<ReviewAggregatorWebApp.Model.Genre>

@{
    Layout = "~/Views/Shared/MovieListsLayout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<h1>Список жанров</h1>

<div class="d-flex flex-column align-items-center">
    @foreach (var genre in Model)
    {
        <a href="@Url.Action("Filter", "MoviesList", new { filterType = "genre", filterValue = genre.Name })" class="btn btn-primary list-button">
            @genre.Name
        </a>
    }
</div>