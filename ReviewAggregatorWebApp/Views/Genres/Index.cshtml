@model IEnumerable<ReviewAggregatorWebApp.Model.Genre>
@using System.Globalization
@{
    Layout = "~/Views/Shared/MovieFiltersLayout.cshtml";
}
<h1>Список жанров</h1>

<div class="d-flex flex-column align-items-center">
    @foreach (var genre in Model)
    {
        var textInfo = CultureInfo.CurrentCulture.TextInfo;
        var genreName = textInfo.ToTitleCase(genre.Name.ToLower());

        <div class="genre-item list-button d-flex align-items-center" 
        style="width: 100%; cursor: pointer;" 
        onclick="location.href='@Url.Action("Filter", "MoviesList", new { genre = genre })';">
            @genreName
        </div>
    }
</div>